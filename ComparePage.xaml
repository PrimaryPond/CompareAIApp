                    <TextBox TextWrapping="Wrap" Text="" Width="199" TextChanged="TextBox_TextChanged" BorderBrush="Black"/>
                    <Button Content="Search" Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
            


        </Grid>

    </Grid>
