                    <TextBox TextWrapping="Wrap" Text="" Width="199" TextChanged="TextBox_TextChanged" Background="{StaticResource ButtonColor}" BorderBrush="{StaticResource ButtonColor}" Foreground="{DynamicResource ButtonTextColor}"/>
