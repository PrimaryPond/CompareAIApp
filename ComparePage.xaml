        </Grid>
        <Border x:Name="border" BorderBrush="Black" BorderThickness="0 0 0 1 " Height="55" VerticalAlignment="Center">


        </Border>
        <Grid Grid.Row="1">
            <Border BorderBrush="Black" BorderThickness="1" Margin="70,12,426,76"/>
            <Border BorderBrush="Black" BorderThickness="1" Margin="425,12,71,76"/>
            <Button Content="Start Comparison" HorizontalAlignment="Center" Margin="0,331,0,0" VerticalAlignment="Top" Height="42" Width="146" Cursor="Hand"/>
            
            <StackPanel Margin="80,22,436,86" VerticalAlignment="Center">
                <Label Content="Select First Product&#xD;&#xA;" Width="132" HorizontalAlignment="Center" Height="24" HorizontalContentAlignment="Center"/>
