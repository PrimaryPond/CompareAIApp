<UserControl x:Class="CompareAI.product_square"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompareAI"
             mc:Ignorable="d" 
             d:DesignHeight="284" d:DesignWidth="286" Background="{DynamicResource ForegroundColor}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="41*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="tb_name" HorizontalAlignment="Left" Margin="10,0,0,0" TextWrapping="Wrap" Text="Product Name ex example example example exmaple example example example &#xD;&#xA;" VerticalAlignment="Center" Width="240" IsReadOnly="True" Focusable="False" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{DynamicResource TextColor}" FontSize="16" Height="66"/>
        <TextBox x:Name="tb_desc" HorizontalAlignment="Center" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="266" IsReadOnly="True" Focusable="False" Height="222" Foreground="{DynamicResource ButtonTextColor}" Background="{DynamicResource ButtonColor}" BorderBrush="{x:Null}" BorderThickness="0,0,0,0" Padding="3,2,3,2" Grid.Row="1"/>
        <Button Content="X" Style="{StaticResource buttonHover}" HorizontalAlignment="Left" Margin="255,22,0,0" VerticalAlignment="Top" Width="21" Height="14" RenderTransformOrigin="0.506,0.539" VerticalContentAlignment="Center" Background="{DynamicResource ButtonColor}" Foreground="{DynamicResource ButtonTextColor}" FontSize="10" Padding="1,49,1,26">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="2"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</UserControl>
