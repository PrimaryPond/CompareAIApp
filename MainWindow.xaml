<Window x:Class="CompareAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompareAI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Name="mainWindow" WindowStartupLocation="CenterScreen">
    <Grid Background="{StaticResource BackgroundColor}">
        <Border x:Name="border" BorderBrush="{StaticResource ForegroundColor}" BorderThickness="0 0 0 1 " Height="55" VerticalAlignment="Top">
            <Label Content="CompareAI" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="{StaticResource TextColor}" FontSize="24" FontFamily="Bahnschrift Light" Padding="5,5,5,5"/>
        </Border>
        <Label Content="Welcome to CompareAI!" HorizontalAlignment="Center" Margin="0,107,0,0" VerticalAlignment="Top" Foreground="{StaticResource TextColor}" FontSize="30" FontFamily="Bahnschrift Light" IsEnabled="False"/>
        <TextBox HorizontalAlignment="Center" Margin="0,171,0,0" TextWrapping="Wrap" Text="With this app you can compare two different products without the hassle of finding the products! It saves time for you and allows for a more educated decision on your purchases." VerticalAlignment="Top" Width="438" Background="#00000000" Foreground="{StaticResource TextColor}" Height="50" HorizontalContentAlignment="Center" FontSize="14" FontFamily="Leelawadee" FontStretch="Normal" IsReadOnly="True" Focusable="False" BorderBrush="#00ABADB3" Cursor="Arrow" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" BorderThickness="0,0,0,0" IsUndoEnabled="False">
        </TextBox>
        <Button x:Name="btn_startCompare" Style="{StaticResource buttonHover}" Content="Start CompareAI" HorizontalAlignment="Center" Margin="0,256,0,0" VerticalAlignment="Top" BorderThickness="0,0,0,0" Height="50" Width="160" FontFamily="Bahnschrift" FontSize="16" Background="{StaticResource ButtonColor}" Foreground="{StaticResource ButtonTextColor}" Click="btn_startCompare_Click" Cursor="Hand">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
               
            </Button.Resources>
        </Button>

    </Grid>
</Window>
