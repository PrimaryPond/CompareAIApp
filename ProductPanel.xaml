<UserControl x:Class="CompareAI.ProductPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompareAI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="475" Background="White">
    <Grid Height="100" Width="475">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/CompareAi;component/lib/box-rectangle-svgrepo-com.png" Grid.RowSpan="2" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Label x:Name="tbProductName" Content="Error, Couldn't find product name" Grid.ColumnSpan="1" Margin="6,8,83,64" Grid.Column="1" FontSize="16" Grid.RowSpan="2" />
        <TextBox x:Name="tbProductDesc" Grid.Column="1" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" Text="Product description: Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas sit amet consectetur sapien, nec egestas ex. Nam venenatis ut ex eu mattis. " VerticalAlignment="Center" Width="312" Height="66"/>
        <Button Grid.Column="1" Content="+" HorizontalAlignment="Left" Margin="254,10,0,0" VerticalAlignment="Top" Width="28" Height="20" Padding="1,-3,1,0"/>
        <Button Grid.Column="1" Content="..." HorizontalAlignment="Left" Margin="286,10,0,0" VerticalAlignment="Top" Width="36" Height="20" Padding="1,-17,1,-3" FontSize="20"/>
    </Grid>
</UserControl>
